//---------------------------------------------------------------------------


void __fastcall TForm1::Button1Click(TObject *Sender)
{
	if(Label1->Text=="0")
	{
		Label1->Text="1";
	}
	else
	{
		Label1->Text=Convert::ToInt32(Label1->Text)+ "1";

	}
}
